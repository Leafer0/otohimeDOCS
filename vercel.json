{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/js/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "public/pic/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
 
    { "src": "/", "dest": "/public/SY.html" },
    { "src": "/login", "dest": "/public/DL.html" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/pic/(.*)", "dest": "/public/pic/$1" },

  
    {
      "src": "/api/(.*)",
      "dest": "http://47.98.223.44:11451/$1",
      "headers": {
        "Access-Control-Allow-Origin": "https://otohime-docs.vercel.app",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type,Authorization"
      }
    },

    { 
      "src": "/(.*)", 
      "dest": "/public/$1",
      "status": 200
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ]
}